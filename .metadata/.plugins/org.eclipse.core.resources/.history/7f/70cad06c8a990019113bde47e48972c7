        function returnDateString(cur){
                  // document.getElementById('output').innerHTML = cur;
                  var dt = new Date(cur);                        
                  var dat=dt.getDate();
                  var mn=dt.getMonth();
                  // mn++;
                  var yy=dt.getFullYear();
                  var final_mn = "";
                  var final_date = "";
                  var months = [ "January", "February", "March", "April", "May", "June", 
                 "July", "August", "September", "October", "November", "December" ];
                  if (dat<10) {
                       final_dat = "0"+dat;  
                  }
                  else{
                      final_dat = dat;
                  }
                  return yy+"-"+ months[mn] +"-"+final_dat;
        }

        function check(str){
            var dt = new Date(str);                        
            var dat=dt.getDate();
            var mn=dt.getMonth();
            mn++;
            var yy=dt.getFullYear();
            var final_mn = "";
            var final_date = "";
            if (mn<10) {
                 final_mn = "0"+mn;  
            }
            else{
                final_mn = mn;
            }

            if (dat<10) {
                 final_dat = "0"+dat;  
            }
            else{
                final_dat = dat;
            }
                  // alert(yy+"-"+ final_mn +"-"+final_dat);

            return yy+"-"+final_mn+"-"+final_dat;
        }
        window.onload = function() {
            
            var cur = Date.now();
            // document.getElementById('output').innerHTML = cur;
            var dt = new Date(cur);                        
            var dat=dt.getDate();
            var mn=dt.getMonth();
            mn++;
            var yy=dt.getFullYear();
            var final_mn = "";
            var final_date = "";
            if (mn<10) {
                 final_mn = "0"+mn;  
            }
            else{
                final_mn = mn;
            }

            if (dat<10) {
                 final_dat = "0"+dat;  
            }
            else{
                final_dat = dat;
            }
            // // document.getElementById('output').innerHTML = yy+"-"+final_mn+"-"+final_dat;
            // document.getElementById("startdate").value = yy+"-"+final_mn+"-"+final_dat;
            // document.getElementById("enddate").value = yy+"-"+final_mn+"-"+final_dat;

            document.getElementById("startdate").value = check(cur);
            document.getElementById("enddate").value = check(cur);

        }

        
